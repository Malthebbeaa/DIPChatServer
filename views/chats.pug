html 
    head 
        title Chat
        link(rel="stylesheet", href="/css/chats.css")
        script.
            const chatId = "#{chat.id}";
            const currentUser = "#{user.username}";
    body 
        header 
            h1= ChatForum
            .menu 
                if knownUser 
                    include includes/header.pug
        .container
            .owner
                .banner
                    - const chatDato = new Intl.DateTimeFormat('da-DK').format(new Date(chat.createDate));
                    img(src="/user-icon.webp")
                    h4= `${chat.owner} - ${chatDato}`
                .overskrift 
                    h2= chat.subject
                    p= chat.initialMessage
            .inputContainer
                textarea(name="", id="kommentar") 
                br
                button(type="button", id="commentBtn")="KommentÃ©r"

            .messages
                each message in messages
                    .banner
                        - const sendtDato = new Intl.DateTimeFormat('en-US').format(new Date(message.createDate));
                        img(src="/user-icon.webp")
                        h5= `${message.sender} - ${sendtDato}`
                    .message
                        p= message.text
                    if user.username == message.sender && user.userlevel > 1      
                        button(type="button", id="editBtn") Rediger
                        button(type="button", class="removeBtns", data-id=message.id, data-chatId=message.chatId) Slet

    script(src="/chats.js") 
    